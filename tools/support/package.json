{
  "name": "typst",
  "displayName": "Typst",
  "description": "Typst Language Support.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.53.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "typst-markup",
        "aliases": ["Typst Markup"],
        "extensions": [".typ"],
        "configuration": "./config.json"
      },
      {
        "id": "typst-code",
        "aliases": ["Typst Code"],
        "extensions": [".typc"],
        "configuration": "./config.json"
      }
    ],
    "grammars": [
      {
        "language": "typst-markup",
        "scopeName": "source.typst-markup",
        "path": "./typst-markup.tmLanguage.json"
      },
      {
        "language": "typst-code",
        "scopeName": "source.typst-code",
        "path": "./typst-code.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "build": "node build.js"
  }
}
